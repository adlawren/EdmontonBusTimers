<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="firsttimesthecharm.edmontonbustimers.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:text="LOGO"
        android:paddingTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_LOGO"/>

    <TextView
        android:text="Bus"
        android:layout_below="@+id/imageView_LOGO"
        android:layout_marginTop="85dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/textView_Stop"
        android:layout_marginRight="123dp"
        android:id="@+id/textView_businList"/>

    <TextView
        android:text="Stop"
        android:layout_below="@+id/imageView_LOGO"
        android:layout_marginTop="85dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView_Stop"/>

    <TextView
        android:text="ETA"
        android:layout_below="@+id/imageView_LOGO"
        android:layout_marginTop="85dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView_Stop"
        android:layout_marginLeft="110dp"
        android:id="@+id/textView_ETA"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_Stop"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/listView_activebusList"/>


</RelativeLayout>
